<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".AdminActivity">

    <TextView
        android:id="@+id/adminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Administração"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonManageServices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:paddingVertical="14dp"
        android:text="Gerenciar Serviços"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:backgroundTint="#1A237E"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_scissors"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adminTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonManageUnits"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:paddingVertical="14dp"
        android:text="Gerenciar Unidades"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:backgroundTint="#B71C1C"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_store"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonManageServices" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonManageBarbers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:paddingVertical="14dp"
        android:text="Gerenciar Barbeiros"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:backgroundTint="#1A237E"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_barber_chair"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonManageUnits" />

    <!-- Removendo o RecyclerView e o botão de incluir produto direto aqui, pois serão gerenciados nas telas específicas -->

</androidx.constraintlayout.widget.ConstraintLayout>